#:kivy 1.0
WindowManager:
    Logo:
    SecondWindow:
    ThirdWindow:
    Attribb:
    Measurments:

<Logo>:
    name: "logo"

    GridLayout:
        cols:1

        Label:
            text: "Sailboat Control App "
        Image:
            source: 'logoB.png'
            allow_stretch: True

        BoxLayout:
            orientation:"horizontal"

            Button:
                text: "start !"
                background_color: [.7,.7,.7, 1]
                size_hint: (1, 0.7)
                on_release:
                    app.root.current = "Controls" 
                    root.manager.transition.direction = "left"
            
            Button:
                text: "Quit"
                background_color: [.7,.7,.7, 1]
                size_hint: (1, 0.7)
                on_release:
                    app.stop()
                    


<SecondWindow>:
    name: "Controls"
    AnchorLayout:
        anchor_y: 'top'

        GridLayout:
            cols:1
            rows:3
            GridLayout:
                cols:4
                BoxLayout:
                    orientation:"vertical"
                    Label:
                        text: "navi lights"
                    
                    Image:
                        source: 'lightB.png'
                        allow_stretch: True

                    Switch:
                        id: navi
                        active: False
                        on_active:  root.btn_states(navi.active, motor.active, anchor.active)
                           

                BoxLayout:
                    orientation: "vertical"    
                    Label:
                        text:"motor"

                    Image:
                        source: 'motor.png'
                        allow_stretch: True

                    Switch:
                        id: motor
                        active: False
                        on_active: root.btn_states(navi.active, motor.active, anchor.active)

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text:'anchor'

                    Image:
                        source: 'anchor.png'
                        allow_stretch: True
                     
                    Switch:
                        id: anchor
                        active: False
                        on_active: root.btn_states(navi.active, motor.active, anchor.active)
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text:'safe mode'
                    
                    Image:
                        source: 'shield.png'
                        allow_stretch: True

                    Switch:
                        active: False
            Button:
                size_hint: (1, 0.5)
                text:'data, measurments'
                background_color: [.5,.5,.5, 1]
                on_release:
                    app.root.current = "measurments" 
                    root.manager.transition.direction = "left"

            Button:
                size_hint: (1, 0.5)
                text:'sliders'
                background_color: [.5,.5,.5, 1]
                on_release:
                    app.root.current = "Sliders" 
                    root.manager.transition.direction = "left" 
<ThirdWindow>:
    name: "Sliders"
    
    BoxLayout:
        orientation: 'vertical'

        
        Slider:
            id: sails
            min:0
            max:180
            value: 180
            value_track: True
            value_track_color: [255,255,255,100]
            step: 0.5
            orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'

            GridLayout:
                cols:1
                rows:2
                Label:
                    text: 'sails angle: '
                Label:
                    text: str(sails.value)

            Image:
                source: 'sail.png'
                allow_stretch: True
            

        Slider:
            id: ster
            min:-90
            max:90
            value: 0
            step: 0.5
            orientation: 'horizontal'

        BoxLayout:
            orientation: 'horizontal'
            
            GridLayout:
                cols:1
                rows:2
                
                Label:
                    text: 'rudder angle: '
                Label:
                    text: str(ster.value)
            
            Image:
                source: 'steering-wheel.png'
                allow_stretch: True

        BoxLayout:
            orientation: "horizontal"    
            Button:
                size_hint: (0.7, 1)
                text: "switches"
                background_color: [.5,.5,.5, 1]
                on_release:
                    app.root.current = "Controls" 
                    root.manager.transition.direction = "right" 

            Button:
                text: '0 angle on rudder'
                background_color: [.5,.5,.5, 1]
                on_release:
                    ster.value = 0
                    root.slider_release(ster.value, sails.value)

            Button:
                
                text: "send values"
                background_color: [.5,.5,.5, 1]
                on_release:
                    root.slider_release(ster.value, sails.value)

<Measurments>:
    name: "measurments"

    BoxLayout:
        orientation: "horizontal"

        Button:
            text: "attribuitions"
            size_hint: (0.7, 1)
            background_color: [.5,.5,.5, 1]
            on_release:
                app.root.current = "Atr" 
                root.manager.transition.direction = "left" 

<Attribb>:
    name: "Atr"

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Author: PG"

        Label:
            text: "Icons made by :"    
        Label:
            text: "https://www.flaticon.com/authors/catkuro"
        Label:
            text: "https://freeicons.io/profile/3"
        Label:
            text: "https://freeicons.io/profile/823"
        Label:
            text: "https://freeicons.io/profile/730"
        Label:
            text: "https://icon-icons.com/users/7OwrKFGIruD4Yub0iw04I/icon-sets/"


        
        